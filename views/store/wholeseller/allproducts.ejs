<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/store/allproducts_import.ejs') %>
  <body>
  <%- include('../../partials/store/products_nav.ejs') %>
  <%- include('../../partials/store/cart.ejs') %>
 


 <div class="main-content container-fluid"> 

  <section id="newProd">
    <h1 id="newProd-header">New Arrivals</h1>
    <div class="container newProd-slider " style="text-align: center;">
      <div class="row  slider prod-slider">
        
        
        <%let n=Math.ceil((products.length-1)*0.16)
          let m=products.length-1;
          let t=m-n-1;
        %>
     
       <% for(let i=m;i>=t;i--) { %>

       
        
       

        <div class="col-md-4 col-sm-6 d-flex justify-content-center">
          <div class="card new-prod" style="width: 17rem">
          

            <a href="/store/shop/<%=products[i].sid%>/product/<%=products[i].productId%>">
              <img
                src="<%=products[i].productImage %>"
                class="card-img-top  "
                alt="Card image cap img-fluid"
              /></a>

            <div class="card-body new-prod-details">
              <p class="card-text new-prod-price " >&#8377 <%=products[i].productPrice%></p>
              <h5 class="card-title new-prod-name"> <%=products[i].productName%></h5>
              
           
                <div class="slider-btn" style="padding-top: 10px;">
                <!-- <a href="/store/shop/<%=products[i].sid%>/product/<%=products[i].productId%>" class="btn  look-btn">Quick Look</a> -->
                <a href="/store/shop/<%=products[i].sid%>/product/<%=products[i].productId%>"   class="btn  buy-btn" style="border: none;" >Buy Now</a>
                </div>          
             
            </div>
          </div>
        </div>
        <% }%>

    
      </div>
    </div>
   
  </section>


    <section id="allprod">
      

    <div class="container products">
      <h1 id="newProd-header">All Products</h1>

      <div class="prod-wrapper">
        <div class="searchBar">
          <input id="searchQueryInput"  onkeyup="searchProd()" type="text" name="searchQueryInput" placeholder="What are you looking for?" value="" />
          <button id="searchQuerySubmit" type="submit" name="searchQuerySubmit">
            <svg style="width:24px;height:24px" viewBox="0 0 24 24"><path fill="#666666" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
            </svg>
          </button>
        </div>
        <div class="filter-condition">
			   <span style="font-weight: bold;">Sort by Price</span>
      
          <select name="" id="select">
           
            <option value="Default">Default</option>
            <option value="LowToHigh">Low to high</option>
            <option value="HighToLow">High to low</option>
            
          </select>
          
        </div>
      </div>

      

      <div class="row product-pagin" id="prod-pagin">
       
    
        
        
        <% for(let i=0;i< products.length;i++) { %>
          <!-- <% let rand=Math.floor(Math.random() * (products.length)) %> -->
          <div class="col-lg-3 col-md-6 col-sm-6 mb-0 product " data-price="<%=products[i].productPrice%>">
            <div class="card product-show mb-5" style="width: 18rem">
              <a href="/store/shop/<%=products[i].sid%>/product/<%=products[i].productId%>">
              <img
                src="<%=products[i].productImage %>"
                class="card-img-top"
                alt="..."
              /></a>
           
              <div class="card-body d-flex justify-content-center prod-details " >
                <h5 class="card-title"></h5>
                <p class="card-text prod-name">
               <%=products[i].productName%>
                </p>
  
              </div>
              <div class="content">
                <div class="content-item " style="text-align: center;"> 
                 <span class="prod-price mx-1">&#8377  <%=products[i].productPrice%></span> 
                <br>
               
                <span class="buttons allbtn d-flex justify-content-center"> 
                  <!-- <button class="btn btn-buy mr-1 tooltip-btn" data-toggle="tooltip" data-placement="top" title="Buy"> <i class="fas fa-shopping-bag"></i></button> -->
                  <a href="/store/shop/<%=products[i].sid%>/product/<%=products[i].productId%>">
                    <button class="btn btn-cart tooltip-btn buy-btn" qty="<%=products[i].qty%>"   data-toggle="tooltip" data-placement="top" id="<%=products[i].productId%>" title="Buy now"><i class="fas fa-shopping-cart"></i></button>
                  </a>
                  
                   <!-- <a href="/store/shop/<%=products[rand].sid%>/product/<%=products[rand].productId%>">
                   <button class="btn btn-more tooltip-btn"  data-toggle="tooltip" data-placement="top" title="More"><i class="fas fa-info-circle"></i></button></span>
                   </a> -->
              </div>
             
            </div>
            </div>
            
          </div>

        <% }%> 
      </div>
     
    </div> 

    <!-- <div class="d-flex justify-content-center" style="margin-bottom: 10px;">
    <button id="btn-prev"  class="btn btn-primary " style="margin-right: 10px;">Prev</button>
    <button id="btn-next" class="btn btn-primary ">Next</button>
   </div> -->
 
    </section>
    </div>


    <%- include('../../partials/store/shop_footer.ejs') %>
  
  </body>
  <%- include('../../partials/store/allproducts_script.ejs') %>
  <script src="/javascripts/store/sort-prod.js"></script>
  <script src="/javascripts/store/buy-prod.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
