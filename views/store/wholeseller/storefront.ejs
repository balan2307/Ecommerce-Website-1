  </head>

  <body>
    <header>
      <%- include('../../partials/store/products_nav.ejs') %>
    
      <%- include('../../partials/store/cart.ejs') %>
   
    </header>
    <%- include('../../partials/flash') %>

    <div class="container-fluid-xxl main-container" >
      <% console.log("Storefront rendered") %>
    
      <div
        id="carouselExampleFade"
        class="carousel slide carousel-fade"
        data-bs-ride="carousel"
      >
      
        <div class="carousel-inner">
          
          <% for(let i=0;i<=2;i++) { %> <% let rand=Math.floor(Math.random() *
          (products.length));%>
        
          
       
         
          <div class="carousel-item">
            <!-- <div class="carousel-caption d-none d-sm-block">
              <h5 style="margin-top: 50px;">Most Bought</h5>
              </div> -->
         
            
           
            <a href="/store/shop/<%=id%>/product/<%=products[i].productId%>">
              <img
                src="<%=products[i].productImage%>"
                class="d-block w-100 img-fluid carousel-images"
                alt="..."
              />
            </a>
        
          </div>
          <% } %>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleFade"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleFade"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

