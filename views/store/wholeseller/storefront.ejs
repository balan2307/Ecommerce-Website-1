        </div>

        <div
          class="row row-3 mb-3"
          style="display: flex; justify-content: center"
        >
        <h1 class="content-header">In Focus</h1>
          <div class="col-10 overlay mb-2 inner-row">
            <% let rand=Math.floor(Math.random() * (products.length)) %>
            <div class="hover-img">
            <a  href="/store/shop/<%=id%>/product/<%=products[rand].productId%>">
              <img
                class="img-fluid image-huge"
                src="<%=products[rand].productImage%>"
            /></a>
            </div>
            <div class="hover-price">
              <span > <h2>&#8377 <%=products[rand].productPrice%></h2></span>
              </div>
          </div>
          <div class="col-md-2  -flex justify-content-center inner2-row">
            <div class="row">
              <% for(let i=0;i<=1;i++) { %> 
                <% let rand=Math.floor(Math.random()
              * (products.length)) %>
              <div class="col-6  overlay col-md-12 mb-2 d-flex justify-content-center">
                <div class="hover-img">
                <a
                  href="/store/shop/<%=id%>/product/<%=products[rand].productId%>"
                >
                  <img
                    class="img-fluid images-nest"
                    src="<%=products[rand].productImage%>"
                    alt=""
                /></a>
                </div>
                <div class="hover-price">
                  <span > <h2>&#8377 <%=products[rand].productPrice%></h2></span>
                  </div>
               
              </div>
              <% } %>
            </div>
          </div>
        </div>

