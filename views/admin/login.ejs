<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title></title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%- include('../partials/login_register') %>
  </head>

  <body>
    <%- include('../partials/flash') %>

    <section class="form">
      <div class="container my-5">
        <div class="row g-0 shadow top">
          <div class="d-none d-lg-inline-block col-lg-6 mid">
            <img src="/images/login.jpg" alt="" class="img-fluid img" />
          </div>
          <div class="col-lg-6 px-5 pt-4 bottom">
            <h1 class="font-weight-bold mb-4">Brand name</h1>

            <form
              action="/admin/login"
              class="mx-2 my-5 form validated-login-form"
              novalidate
              method="POST"
            >
              <h3 class="mb-4">Welcome back!</h3>
              <div class="form-row mb-3">
                <label for="email" class="form-label label"
                  >Owner's Email</label
                >
                <div class="input-group col-lg-12">
                  <span class="icons input-group-addon"
                    ><i class="fas fa-user"></i
                  ></span>
                  <input
                    type="text"
                    id="email"
                    name="email"
                    placeholder="Owner's Email"
                    class="form-control input"
                    autocomplete="off"
                    required
                  />
                </div>
              </div>

              <div class="form-row mb-3">
                <label for="password " class="form-label label">Password</label>
                <div class="col-lg-12 input-group">
                  <span class="icons input-group-addon"
                    ><i class="fas fa-lock"></i
                  ></span>
                  <input
                    type="password"
                    name="password"
                    id="Password"
                    placeholder="Password"
                    class="form-control shadow-5 input"
                    autocomplete="off"
                    required
                  />
                </div>
              </div>

              <div class="register_btn">
                <button class="btn btn-reg my-3">Login</button>
                <!-- <a href="/" class="btn my-3" style="border: 1px solid #f0439f;">Cancel</a> -->
              </div>
            </form>
            <div class="text-end">
              <!-- <button class="btn-xs btn-primary text-end btn-log my-2 ">Register</button> -->
              <p class="login_link">
                Don't have an account yet?
                <a href="/admin/register">
                  Create an account</a
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

